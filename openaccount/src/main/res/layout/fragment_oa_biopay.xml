<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewmodel"
                type="com.zhuorui.securities.openaccount.ui.viewmodel.OABiopsyViewModel"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/tablayout_bg"
            android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="50dp">
            <ImageView android:layout_width="13dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="13dp"
                       android:layout_centerVertical="true"
                       android:background="@mipmap/btn_white_back"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color_FFFFFFFF"
                      android:textSize="20sp"
                      android:layout_centerInParent="true"
                      android:textStyle="bold"
                      android:text="@string/zhuorui_openaccount"/>
            <ImageView android:layout_width="24dp"
                       android:layout_height="6dp"
                       android:layout_marginRight="13dp"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:background="@mipmap/share_more"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/color_FFFFFFFF">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="21dp"
                       android:layout_marginRight="37dp"
                       android:layout_marginTop="13dp"
                       android:layout_marginLeft="37dp"
                       android:background="@mipmap/combine_step"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="13dp"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/ocr"
                          android:textSize="12sp"
                          android:textColor="@color/color_1A6ED2"
                          android:layout_alignParentLeft="true"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/infomation"
                          android:layout_centerHorizontal="true"
                          android:textSize="12sp"
                          android:textColor="@color/color_b3b3b3"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/verify_info"
                          android:textSize="12sp"
                          android:textColor="@color/color_b3b3b3"
                          android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="5dp"
                       android:background="@color/app_background_color"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/verify_self"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="16dp"
                      android:textColor="@color/color_232323"
                      android:textStyle="bold"
                      android:textSize="20sp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="258dp"
                       android:layout_marginLeft="13dp"
                       android:layout_marginRight="13dp"
                       android:layout_marginTop="18dp"/>
            <com.zhuorui.commonwidget.StateButton
                    android:layout_width="164dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:textSize="36sp"
                    android:padding="0dp"
                    android:minHeight="0dp"
                    android:gravity="center"
                    android:text="2345"
                    android:layout_gravity="center_horizontal"
                    android:enabled="false"
                    app:radius="8dp"
                    android:textColor="@color/color_FFFFFFFF"
                    app:normalBackgroundColor="@color/color_454553"
                    app:unableBackgroundColor="@color/color_454553"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/loading"/>
        </LinearLayout>
    </LinearLayout>
</layout>