<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="oaDataTipsToptxt">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="openAccountStep">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
    </style>

    <style name="openAccountSubTitle">
        <item name="android:textColor">#282828</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountSubTitleDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A1A1A1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountLine">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountItem">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="zr_dividerVisible">true</item>
    </style>

    <style name="ZRTitleTextViewRightArrow" parent="openAccountItem">
        <item name="zr_iconVisible">true</item>
        <item name="zr_iconSrc">@mipmap/ic_small_arrow</item>
        <item name="zr_iconWidth">7dp</item>
        <item name="zr_iconHight">11dp</item>
    </style>

    <style name="ZRCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#282828</item>
        <item name="android:drawableLeft">@drawable/checkbox_style</item>
        <item name="android:drawableStart">@drawable/checkbox_style</item>
        <item name="colorControlNormal">@color/color_1A6ED2</item>
        <item name="colorControlActivated">@color/color_1A6ED2</item>
    </style>
</resources>