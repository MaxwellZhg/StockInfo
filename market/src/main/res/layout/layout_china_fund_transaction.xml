<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:paddingBottom="20dp"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/color_2D2C35"
                                                   android:layout_height="wrap_content">
<TextView
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:id="@+id/tv_tips"
          android:paddingTop="12dp"
          android:paddingStart="13.5dp"
          android:paddingBottom="13dp"
          android:textColor="@color/color_FFFFFFFF"
          android:text="资金流向趋势"/>
<LinearLayout
             android:id="@+id/ll_segment"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tv_tips"
             android:background="@drawable/china_hk_fund_transaction_bg"
             android:layout_width="125dp" 
              android:layout_height="20.5dp">
    <TextView android:layout_width="0dp"
              android:layout_height="match_parent"
              android:background="@color/color_B3BCD0"
              android:layout_marginTop="1dp"
              android:layout_marginStart="1dp"
              android:id="@+id/tv_north_trend"
              android:layout_marginBottom="1dp"
              android:text="北向"
              android:gravity="center"
              android:textSize="14sp"
              android:textColor="@color/color_191821"
              android:layout_weight="1"/>
    <TextView android:layout_width="0dp"
              android:background="@color/color_2D2C35"
              android:textColor="@color/color_B3BCD0"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="1dp"
              android:layout_marginBottom="1dp"
              android:textSize="14sp"
              android:gravity="center"
              android:id="@+id/tv_sourth_trend"
              android:text="南向"
              android:layout_height="match_parent"
              android:layout_weight="1"/>
</LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_cahart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_segment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="350:160"
    />
</androidx.constraintlayout.widget.ConstraintLayout>