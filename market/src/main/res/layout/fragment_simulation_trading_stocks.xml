<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewModel" type="com.zhuorui.securities.market.ui.viewmodel.SimulationTradingStocksViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/color_f0f0f0"
            android:layout_height="match_parent">

        <com.zhuorui.commonwidget.ZhuoRuiTopBar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                app:zr_topbarTitle="模拟炒股"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/top_bar"
                android:gravity="center_vertical"
                android:background="@color/color_FFFFFFFF"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="17dp" android:layout_height="17dp"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/ic_hk"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模拟炒港股练习"
                    android:layout_marginStart="11dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_title"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/color_FFFFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限价单（增强）"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/color_232323"
                    android:textSize="15sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="0dp"
              android:id="@+id/line1"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              android:background="#FFA1A1A1"
              app:layout_constraintTop_toBottomOf="@+id/ll_type"
              app:layout_constraintEnd_toStartOf="@+id/view2"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/color_FFFFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代码"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入股票代码或简称"
                    android:layout_marginStart="26dp"
                    android:textColorHint="@color/color_FFA1A1A1"
                    android:textSize="15sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="0dp"
              android:id="@+id/line2"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              android:background="#FFA1A1A1"
              app:layout_constraintTop_toBottomOf="@+id/ll_code"
              app:layout_constraintEnd_toStartOf="@+id/view2"/>

        <RelativeLayout
                android:id="@+id/ll_price"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                android:orientation="horizontal"
                android:background="@color/color_FFFFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginStart="26dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_price"
                    android:textColor="#ff282828"
                    android:textSize="25sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ff282828"
                    android:textSize="25sp"/>

        </RelativeLayout>

        <View android:layout_width="0dp"
              android:id="@+id/line3"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              android:background="#FFA1A1A1"
              app:layout_constraintTop_toBottomOf="@+id/ll_price"
              app:layout_constraintEnd_toStartOf="@+id/view2"/>

        <RelativeLayout
                android:id="@+id/ll_num"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                android:orientation="horizontal"
                android:background="@color/color_FFFFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginStart="26dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_num"
                    android:textColor="#ff282828"
                    android:textSize="25sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ff282828"
                    android:textSize="25sp"/>

        </RelativeLayout>

        <View android:layout_width="0dp"
              android:id="@+id/line4"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              android:background="#FFA1A1A1"
              app:layout_constraintTop_toBottomOf="@+id/ll_num"
              app:layout_constraintEnd_toStartOf="@+id/view2"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_money"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/color_FFFFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/color_232323"
                    android:textSize="17sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="--"
                    android:layout_marginStart="26dp"
                    android:textColorHint="@color/color_FFA1A1A1"
                    android:textSize="15sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="135dp"
              android:layout_height="0dp"
              android:layout_marginTop="10dp"
              android:background="@color/color_232323"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/ll_title"
              android:id="@+id/view2"
              app:layout_constraintBottom_toBottomOf="@+id/ll_money"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大可买  --"
                android:textColor="@color/color_FFA1A1A1"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_buy"
                app:layout_constraintStart_toStartOf="@+id/btn_buy"/>

        <com.zhuorui.commonwidget.StateButton
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="@color/color_FFFFFFFF"
                app:normalBackgroundColor="@color/color_FFA1A1A1"
                android:text="买入"
                android:gravity="center"
                app:radius="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_money"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/btn_buy"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大可卖  --"
                android:textColor="@color/color_FFA1A1A1"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_sell"
                app:layout_constraintStart_toStartOf="@+id/btn_sell"/>

        <com.zhuorui.commonwidget.StateButton
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="@color/color_FFFFFFFF"
                app:normalBackgroundColor="@color/color_FFA1A1A1"
                android:text="卖出"
                android:gravity="center"
                app:radius="5dp"
                android:textSize="18sp"
                android:id="@+id/btn_sell"
                android:textStyle="bold"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_money"
                android:layout_marginEnd="13dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>