<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/ll_content"
              android:background="@color/color_211F2A"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <FrameLayout
              android:orientation="vertical"
              android:layout_marginEnd="8.5dp"
              android:layout_marginStart="12.5dp"
              android:layout_width="wrap_content" 
              android:layout_height="match_parent">
        <View android:layout_width="0.5dp"
              android:layout_marginTop="14dp"
              android:layout_marginStart="3.5dp"
              android:id="@+id/view_header"
              android:background="@drawable/shape_dotted_line_vertical"
              android:layout_height="match_parent"/>
        <View android:layout_width="0.5dp"
              android:layout_marginStart="3.5dp"
              android:id="@+id/view_coustom"
              android:background="@drawable/shape_dotted_line_vertical"
              android:layout_height="match_parent"/>
        <View android:layout_width="7dp"
              android:layout_marginTop="7dp"
              android:layout_height="7dp"
              android:background="@drawable/bg_shape_point"/>
   </FrameLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_time"
                  android:textSize="14sp"
                  android:paddingBottom="14.5dp"
                  android:textColor="@color/color_7B889E"
                  android:text="2019-09-02   17:47"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginEnd="28dp"
                  android:id="@+id/tv_headline"
                  android:paddingBottom="14.5dp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_FFFFFFFF"
                  android:text="月报截止二零一九年八月三十一日止之前股份 发行人的证券变动月报"/>
    </LinearLayout>
</LinearLayout>