<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingDefaultResource">
    <data>
        <variable
                name="viewModel"
                type="com.zhuorui.securities.market.ui.viewmodel.MarketDetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_market_detail_topbar"/>

        <include
                android:id="@+id/bottpm_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                layout="@layout/layout_market_detail_bottom"/>

        <!--指数-->
        <com.zhuorui.securities.market.customer.view.MarketDetailIndexView
                android:id="@+id/index"
                app:layout_constraintBottom_toTopOf="@id/bottpm_bar"
                android:background="@color/color_211F2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View style="@style/MadrketDetailLine"
              app:layout_constraintTop_toBottomOf="@id/top_bar"
              android:layout_width="match_parent"/>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:background="@color/color_211F2A"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:srlEnableOverScrollBounce="false"
                app:srlEnableOverScrollDrag="false"
                app:srlEnableRefresh="false"
                app:srlEnableLoadMore="false"
                app:srlReboundDuration="1000"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintBottom_toTopOf="@id/index">

            <androidx.core.widget.NestedScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="none"
                    android:overScrollMode="never">

                <LinearLayout
                        android:id="@+id/ll_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!--股票信息-->
                    <com.zhuorui.securities.market.customer.view.StockDetailView
                            android:id="@+id/stock_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <View style="@style/MadrketDetailLine"/>

                    <!--A股-->
                    <include
                            layout="@layout/layout_market_detail_a_shares"/>

                    <View style="@style/MadrketDetailLine"/>

                    <!--除权信息-->
                    <include
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            layout="@layout/layout_market_detail_ex_rights"/>

                    <View style="@style/MadrketDetailLine" android:layout_height="2dp"/>

                    <!--K线-->
                    <FrameLayout
                            android:id="@+id/kline_view"
                            android:layout_width="match_parent"
                            android:layout_height="337dp"/>

                    <View style="@style/MadrketDetailLine"/>

                    <!--买卖盘十档-->
                    <com.zhuorui.securities.market.customer.view.BuyingSellingFilesView
                            android:id="@+id/buyingSellingFiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <View style="@style/MadrketDetailLine"/>

                    <!--买卖盘经纪-->

                    <com.zhuorui.securities.market.customer.view.OrderBrokerView
                            android:id="@+id/orderBroker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <View style="@style/MadrketDetailLine" android:layout_height="2dp"/>

                    <net.lucode.hackware.magicindicator.MagicIndicator
                            android:id="@+id/magic_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>

                    <View style="@style/MadrketDetailLine"/>

                    <FrameLayout
                            android:id="@+id/fl_tab_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <!--顶部悬浮tab-->
        <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/top_magic_indicator"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                android:layout_marginTop="1dp"
                android:background="@color/color_211F2A"/>

        <View android:id="@+id/top_magic_indicator_line"
              style="@style/MadrketDetailLine"
              android:layout_width="match_parent"
              app:layout_constraintTop_toBottomOf="@id/top_magic_indicator"/>
<!--       <include layout="@layout/layout_market_info_select_tips"/>-->
        <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/top_magic_indicator_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_info_tips"
                android:visibility="visible"
                android:background="@color/color_211F2A"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
            <TextView android:layout_width="45dp"
                      android:layout_height="20dp"
                      android:id="@+id/tv_info"
                      android:textSize="12sp"
                      android:layout_marginStart="12.5dp"
                      android:gravity="center"
                      android:textColor="@color/color_53A0FD"
                      android:background="@drawable/market_info_selected_bg"
                      android:text="资讯"/>
            <TextView android:layout_width="45dp"
                      android:layout_height="20dp"
                      android:gravity="center"
                      android:id="@+id/tv_report"
                      android:textSize="12sp"
                      android:layout_marginStart="30dp"
                      android:textColor="@color/color_C0CCE0"
                      android:background="@drawable/market_info_unselect_bg"
                      android:text="研报"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.Group
                android:id="@+id/top_magic_indicator_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:constraint_referenced_ids="top_magic_indicator,top_magic_indicator_line"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>