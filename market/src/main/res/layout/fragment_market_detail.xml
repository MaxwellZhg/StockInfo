<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingDefaultResource">
    <data>
        <variable
                name="viewModel"
                type="com.zhuorui.securities.market.ui.viewmodel.MarketDetailViewModel"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_211F2A"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/top_bar"
                layout="@layout/layout_market_detail_topbar"/>

        <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:text="股票信息"
                        android:gravity="center"
                        android:textColor="#C0CCE0"
                        android:textSize="20sp"
                        android:background="#2D2C35"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="#C0CCE0"
                />

                <TextView
                        android:text="A股信息"
                        android:gravity="center"
                        android:textColor="#C0CCE0"
                        android:textSize="20sp"
                        android:background="#2D2C35"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"/>
                <TextView
                        android:text="除权日"
                        android:gravity="center"
                        android:textColor="#C0CCE0"
                        android:textSize="20sp"
                        android:background="#2D2C35"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="2dp"
                />

                <TextView
                        android:text="K线"
                        android:gravity="center"
                        android:textColor="#C0CCE0"
                        android:textSize="20sp"
                        android:background="#2D2C35"
                        android:layout_width="match_parent"
                        android:layout_height="337dp"
                        android:layout_marginTop="2dp"
                />

                <TextView
                        android:text="Tab"
                        android:gravity="center"
                        android:textColor="#C0CCE0"
                        android:textSize="20sp"
                        android:background="#2D2C35"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                />

                <TextView
                        android:text="今日资金成交分布"
                        android:textColor="#C0CCE0"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="440dp"
                        android:layout_marginTop="2dp"
                />

                <TextView
                        android:text="今日资金流向趋势"
                        android:textColor="#C0CCE0"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="226dp"
                        android:layout_marginTop="2dp"
                />

                <TextView
                        android:text="历史资金流向"
                        android:textColor="#C0CCE0"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="255dp"
                        android:layout_marginTop="2dp"
                />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</layout>