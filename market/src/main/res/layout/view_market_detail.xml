    />

    <TextView
            android:id="@+id/tv_2_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="成交额"
            android:textColor="#A4B2CB"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_2_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1_3"
            app:layout_constraintRight_toRightOf="@+id/tv_1_3"
    />

    <TextView
            android:id="@+id/tv_3_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="换手率"
            android:textColor="#A4B2CB"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_2_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2_1"
            app:layout_constraintRight_toRightOf="@+id/tv_2_1"
    />

    <TextView
            android:id="@+id/tv_3_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="市盈率（静）"
            android:textColor="#A4B2CB"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_3_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2_2"
            app:layout_constraintRight_toRightOf="@+id/tv_2_2"
    />

    <TextView
            android:id="@+id/tv_3_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="总市值"
            android:textColor="#A4B2CB"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_3_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2_3"
            app:layout_constraintRight_toRightOf="@+id/tv_2_3"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90.950"
            android:textColor="#D9001B"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_1_1"
