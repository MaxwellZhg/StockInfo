            android:textColor="#00CC00"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_2_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_2_1"
            app:layout_constraintRight_toRightOf="@+id/tv_2_1"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90.100"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_2_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_2_2"
            app:layout_constraintRight_toRightOf="@+id/tv_2_2"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.18亿"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_2_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_2_3"
            app:layout_constraintRight_toRightOf="@+id/tv_2_3"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.05%"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_3_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_3_1"
            app:layout_constraintRight_toRightOf="@+id/tv_3_1"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.56"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_3_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_3_2"
            app:layout_constraintRight_toRightOf="@+id/tv_3_2"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.66万亿"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_3_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_3_3"
            app:layout_constraintRight_toRightOf="@+id/tv_3_3"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:textColor="#53A0FD"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_3_1"
            app:layout_constraintRight_toRightOf="parent"
