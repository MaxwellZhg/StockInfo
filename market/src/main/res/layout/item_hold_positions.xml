<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/item_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/line"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stock_name"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="翰森制药"
            android:textColor="#232323"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="7sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/tv_market_value"
            app:layout_constraintBottom_toBottomOf="@+id/tv_market_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_market_value"
    />

    <com.zhuorui.commonwidget.ZRAmountTextView
            android:id="@+id/tv_market_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#232323"
            android:textStyle="bold"
            app:zr_relativeDecimal="false"
            app:zr_keepDecimalComplements="false"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_stock_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_present_price"
    />

    <com.zhuorui.commonwidget.ZRAmountTextView
            android:id="@+id/tv_present_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="23.341"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#232323"
            android:textStyle="bold"
            app:zr_decimalDigit="3"
            app:zr_relativeDecimal="false"
            app:layout_constraintLeft_toRightOf="@+id/tv_market_value"
            app:layout_constraintRight_toLeftOf="@+id/tv_profit_and_loss"
            app:layout_constraintTop_toTopOf="@+id/tv_stock_name"
    />

    <com.zhuorui.commonwidget.ZRAmountTextView
            android:id="@+id/tv_profit_and_loss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+123456789.00"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#232323"
            android:textStyle="bold"
            app:zr_relativeDecimal="false"
            app:zr_showSymbol="true"
            app:zr_keepDecimalComplements="false"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/tv_stock_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_present_price"
            app:layout_constraintRight_toRightOf="parent"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stock_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="03692.HK"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#A1A1A1"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_stock_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_stock_name"
    />

    <com.zhuorui.commonwidget.ZRAmountTextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2200"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#A1A1A1"
            android:textStyle="bold"
            app:zr_decimalDigit="0"
            app:layout_constraintTop_toTopOf="@+id/tv_stock_code"
            app:layout_constraintRight_toRightOf="@+id/tv_market_value"
            app:layout_constraintLeft_toLeftOf="@+id/tv_market_value"
    />

    <com.zhuorui.commonwidget.ZRAmountTextView
            android:id="@+id/tv_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="23"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#A1A1A1"
            android:textStyle="bold"
            app:zr_relativeDecimal="false"
            app:zr_decimalDigit="3"
            app:zr_keepDecimalComplements="false"
            app:layout_constraintRight_toRightOf="@+id/tv_present_price"
            app:layout_constraintTop_toTopOf="@+id/tv_stock_code"
            app:layout_constraintLeft_toLeftOf="@+id/tv_present_price"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profit_and_loss_percentage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+2.13%"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#A1A1A1"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/tv_stock_code"
            app:layout_constraintRight_toRightOf="@+id/tv_profit_and_loss"
            app:layout_constraintLeft_toLeftOf="@+id/tv_profit_and_loss"
    />

    <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#A1A1A1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_stock_code"
    />

    <View
            android:id="@+id/btn_bg"
            app:layout_constraintTop_toTopOf="@+id/tv_business"
            app:layout_constraintBottom_toBottomOf="@+id/tv_business"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#C0CCE0"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_agiotage"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:textColor="#232323"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_transaction"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_quotation"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_quote"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:textColor="#232323"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_rise"
            app:layout_constraintTop_toTopOf="@+id/tv_business"
            app:layout_constraintLeft_toRightOf="@+id/tv_business"
            app:layout_constraintRight_toRightOf="parent"
    />

    <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#A1A1A1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_business"
    />

    <androidx.constraintlayout.widget.Group
            android:id="@+id/btn_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_quotation,tv_business,btn_bg,line2"
    />


</androidx.constraintlayout.widget.ConstraintLayout>