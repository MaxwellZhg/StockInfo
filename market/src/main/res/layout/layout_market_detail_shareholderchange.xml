<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="14.5dp">

    <TextView
            android:id="@+id/tv_hareholder_change_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shareholder_change"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"/>

    <ImageView
            android:id="@+id/iv_hareholder_change_more"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:src="@mipmap/ic_right_more_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12.5dp"
            app:layout_constraintTop_toTopOf="@+id/tv_hareholder_change_label"
            app:layout_constraintBottom_toBottomOf="@+id/tv_hareholder_change_label"/>

    <include android:id="@+id/layout_shareholderchange_bar"
             layout="@layout/layout_shareholderchange_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tv_hareholder_change_label"
             android:layout_marginTop="13dp"/>

    <!--在此处动态添加股东变动信息-->
    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_shareholder_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/layout_shareholderchange_bar"
            android:layout_marginTop="14.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>