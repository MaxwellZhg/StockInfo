<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#C3CDE3"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageView
            android:id="@+id/guide_line"
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:src="#C3CDE3"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <FrameLayout
            android:id="@+id/v_left"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guide_line"
    />

    <FrameLayout
            android:id="@+id/v_right"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="#00AB3B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guide_line"
    />

    <TextView
            android:id="@+id/tv_left_text"
            android:gravity="right"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#D9001B"
            android:paddingRight="3dp"
            app:layout_constraintTop_toTopOf="@id/v_left"
            app:layout_constraintBottom_toBottomOf="@id/v_left"
            app:layout_constraintRight_toLeftOf="@id/v_left"
    />

    <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#00CC00"
            android:paddingLeft="3dp"
            app:layout_constraintTop_toTopOf="@id/v_right"
            app:layout_constraintBottom_toBottomOf="@id/v_right"
            app:layout_constraintLeft_toRightOf="@id/v_right"
    />


    <TextView
            android:id="@+id/tv_text3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>