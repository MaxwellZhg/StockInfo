<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/color_211F2A">
     <androidx.appcompat.widget.AppCompatTextView
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:textColor="@color/color_FFFFFFFF"
             android:textSize="16sp"
             android:paddingStart="13dp"
             android:paddingTop="11dp"
             android:id="@+id/tv_info_of_stock"
             android:paddingEnd="23dp"
             android:text="壹佰制药：注销子公司安徽壹佰肿瘤医投2019 1季度实现营收0元"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info_of_stock"
            android:textColor="@color/color_FFFFFFFF"
            android:paddingStart="13dp"
            android:paddingBottom="13dp"
            android:id="@+id/tv_times"
            android:text="财经新闻  08-08  09:42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:background="@color/color_191821"
          app:layout_constraintTop_toBottomOf="@+id/tv_times"
          android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>