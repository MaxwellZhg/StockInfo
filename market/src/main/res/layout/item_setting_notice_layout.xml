<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/color_35373E"
        android:layout_height="50dp">

    <ImageView
            android:id="@+id/ic_rise_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@mipmap/ic_rise_arrow"/>

    <TextView
            android:id="@+id/tv_rise_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rise_threshold"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ic_rise_arrow"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="17sp"/>
    <androidx.appcompat.widget.AppCompatEditText android:layout_width="60dp"
                                                 android:background="@color/color_000000"
                                                 android:layout_marginStart="10dp"
                                                 android:includeFontPadding="false"
                                                 android:gravity="center"
                                                 android:textSize="12sp"
                                                 android:id="@+id/et_setting"
                                                 android:layout_centerVertical="true"
                                                 android:hint="0.00"
                                                 android:paddingRight="5dp"
                                                 android:inputType="numberDecimal"
                                                 android:textColorHint="@color/color_A1A1A1"
                                                 android:textColor="@color/color_FFFFFFFF"
                                                 android:layout_toEndOf="@+id/tv_rise_threshold"
                                                 android:layout_height="17dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="17sp"
              android:id="@+id/tv_mark"
              android:layout_toEndOf="@+id/et_setting"
              android:layout_centerVertical="true"
              android:layout_marginLeft="6dp"
              android:textColor="@color/color_FFFFFFFF"
              android:text="%"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="9sp"
              android:id="@+id/tv_nomatch_tips"
              android:visibility="invisible"
              android:layout_toEndOf="@+id/tv_rise_threshold"
              android:layout_below="@+id/et_setting"
              android:textColor="@color/color_FFFFFFFF"
             android:text="目标价要高于现价"/>
    <TextView android:layout_width="139dp"
              android:layout_height="25dp"
              android:textColor="@color/color_FFFFFFFF"
              android:textSize="12sp"
              android:visibility="invisible"
              android:gravity="center"
              android:id="@+id/tips_info"
              android:layout_centerVertical="true"
              android:layout_toEndOf="@+id/et_setting"
              android:background="@mipmap/icon_tips_bg"/>
    <ImageButton android:layout_width="46dp"
                 android:layout_height="26dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true"
                 android:layout_marginEnd="13dp"
                 android:id="@+id/ic_switch"
                 android:src="@mipmap/ic_switch_close"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/color_191821"/>
</RelativeLayout>