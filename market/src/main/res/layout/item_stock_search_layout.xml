<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/color_2D2C35"
        android:id="@+id/rl_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.zhuorui.commonwidget.ZrCompareTextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="--"
                android:layout_marginStart="13dp"
                android:id="@+id/tv_stock_info_name"
                app:zr_spancolor="@color/color_1A6ED2"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
                app:layout_constraintTop_toBottomOf="@+id/tv_stock_info_name"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/iv_stock_logo"
                android:layout_marginStart="13dp"
                android:layout_width="12dp"
                android:layout_height="10dp"/>

        <com.zhuorui.commonwidget.ZrCompareTextView
                app:layout_constraintStart_toEndOf="@+id/iv_stock_logo"
                app:layout_constraintTop_toBottomOf="@+id/tv_stock_info_name"
                android:text="--"
                android:id="@+id/tv_stock_code"
                app:zr_spancolor="@color/color_1A6ED2"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp"
            android:id="@+id/iv_topic"
            android:background="@mipmap/ic_topic_history_d"
            android:layout_marginStart="13dp"
            android:layout_width="15dp"
            android:layout_height="14dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          app:layout_constraintTop_toBottomOf="@+id/ll_tips"
          android:background="@color/color_191821"/>
</androidx.constraintlayout.widget.ConstraintLayout>