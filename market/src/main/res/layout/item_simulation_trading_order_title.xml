<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:background="@android:color/white"
                                                   android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_order_status"
            android:paddingLeft="13dp"
            android:layout_marginTop="12dp"
            android:textColor="#A1A1A1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="1.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/atv2"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_name_code"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/atv1"
            app:layout_constraintRight_toLeftOf="@+id/atv3"
            app:layout_constraintTop_toTopOf="@+id/atv1"

    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_quantity_and_order_price"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/atv2"
            app:layout_constraintRight_toLeftOf="@+id/atv4"
            app:layout_constraintTop_toTopOf="@+id/atv1"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_order_time"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/atv3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/atv1"

    />

    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#A1A1A1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/atv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>