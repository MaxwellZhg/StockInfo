<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/ic_pop_rehabilitation_bg">

        <TextView
                android:id="@+id/no_rehabilitation"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFFFF"
                android:text="@string/no_rehabilitation"/>

        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="@color/color_7B889E"/>

        <TextView
                android:id="@+id/before_rehabilitation"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFFFF"
                android:text="@string/before_rehabilitation"/>

        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="@color/color_7B889E"/>

        <TextView
                android:id="@+id/after_rehabilitation"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFFFF"
                android:text="@string/after_rehabilitation"/>
    </LinearLayout>

</LinearLayout>