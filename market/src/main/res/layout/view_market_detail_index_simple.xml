<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="horizontal"
                                                   android:gravity="center_vertical"
                                                   android:background="#2D2C35"
                                                   android:minHeight="38dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#191821"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/open_btn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:padding="13dp"
            android:src="@mipmap/ic_arrow_up_c3cde3"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恒生指数"
            android:textColor="#C0CCE0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/open_btn"
            app:layout_constraintBottom_toBottomOf="@id/open_btn"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/ups_downs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.20%"
            android:textColor="#D9001B"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="@id/open_btn"
            app:layout_constraintBottom_toBottomOf="@id/open_btn"
            app:layout_constraintRight_toLeftOf="@id/open_btn"
    />

    <TextView
            android:id="@+id/ups_downs_pirce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5.05"
            android:textColor="#D9001B"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="@id/open_btn"
            app:layout_constraintBottom_toBottomOf="@id/open_btn"
            app:layout_constraintRight_toLeftOf="@id/ups_downs"
    />

    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26653"
            android:textColor="#D9001B"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="@id/open_btn"
            app:layout_constraintBottom_toBottomOf="@id/open_btn"
            app:layout_constraintRight_toLeftOf="@id/ups_downs_pirce"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#191821"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>