<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detailed_rootview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#191821"
          app:layout_constraintTop_toTopOf="parent"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/retract_btn"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/retract_btn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:padding="13dp"
            android:src="@mipmap/ic_arrow_down_c3cde3"
            app:layout_constraintTop_toTopOf="@id/magic_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/magic_indicator"
            app:layout_constraintRight_toRightOf="parent"
    />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#191821"
          app:layout_constraintTop_toBottomOf="@+id/magic_indicator"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/magic_indicator"
    />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#191821"
          app:layout_constraintTop_toBottomOf="@id/viewpager"/>

</androidx.constraintlayout.widget.ConstraintLayout>