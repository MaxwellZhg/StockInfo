<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.zhuorui.securities.personal.ui.viewmodel.RepairedTradePassViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
                  android:orientation="vertical"
                  android:background="@color/color_f0f0f0"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
           <com.zhuorui.commonwidget.ZhuoRuiTopBar
                   android:id="@+id/top_bar"
                   app:layout_constraintTop_toTopOf="parent"
                   app:zr_topbarTitle="@string/fix_pay_pass"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
           </com.zhuorui.commonwidget.ZhuoRuiTopBar>
        <androidx.appcompat.widget.LinearLayoutCompat
                       app:layout_constraintTop_toBottomOf="@+id/top_bar"
                        android:layout_width="match_parent"
                       android:gravity="center_vertical"
                        android:id="@+id/rl_old_pass"
                        android:layout_height="45dp"
                        android:background="@color/color_FFFFFFFF">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_old_pass_tips"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:layout_marginLeft="13dp"
                      android:textColor="@color/color_282828"
                      android:text="@string/old_pass_word"/>
            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:id="@+id/et_trade_psw"
                    android:textSize="13sp"
                    android:background="@color/color_FFFFFFFF"
                    android:textColor="@color/color_8DB9E4"
                    android:layout_toRightOf="@+id/tv_old_pass_tips"
                    android:textColorHint="@color/color_A1A1A1"
                    android:hint="@string/input_old_trade_pass_tips"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="13dp"
                  android:layout_marginTop="6dp"
                  android:id="@+id/tv_forget_psw"
                  app:layout_constraintTop_toBottomOf="@+id/rl_old_pass"
                  android:layout_width="wrap_content"
                  android:textColor="@color/color_1A6ED2"
                  android:textSize="13sp"
                  android:text="@string/forget_psw"
                  android:layout_height="wrap_content"/>
        <com.zhuorui.commonwidget.StateButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/color_FFFFFFFF"
                app:normalBackgroundColor="@color/color_1A6ED2"
                app:unableBackgroundColor="@color/color_8DB9E4"
                android:text="@string/next"
                android:gravity="center"
                android:enabled="false"
                app:radius="3dp"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="123dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_forget_psw"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="29dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tv_btn_complete"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
