<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.zhuorui.securities.personal.ui.viewmodel.PhoneDevVerifyViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:background="@color/color_FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.zhuorui.commonwidget.ZhuoRuiTopBar
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/top_bar"
                app:zr_topbarTitle="@string/phone_dev_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.zhuorui.commonwidget.ZhuoRuiTopBar>
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_bar"
                android:id="@+id/tv_phone_dev_tips"
                android:text="@string/phone_dev_verify_tips"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/color_A1A1A1"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_dev_tips"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/tv_phone_num"
                android:gravity="center_horizontal"
                android:textColor="@color/color_282828"
                android:layout_marginTop="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.zhuorui.commonwidget.StateButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/color_FFFFFFFF"
                app:normalBackgroundColor="@color/color_1A6ED2"
                app:unableBackgroundColor="@color/color_8DB9E4"
                android:text="@string/phone_dev_verify_code"
                android:gravity="center"
                android:enabled="true"
                app:radius="3dp"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_num"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="29dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tv_btn_complete"/>
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_btn_complete"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/unable_verify_phone_tips"
                android:id="@+id/unable_verify_phone"
                android:gravity="center_horizontal"
                android:textColor="@color/color_1A6ED2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
