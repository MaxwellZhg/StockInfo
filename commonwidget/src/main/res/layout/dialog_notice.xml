<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_msg_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/color_00CC00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/tv_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/color_A1A1A1"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/iv_msg_icon"
            android:layout_marginStart="10.5dp"
            app:layout_constraintTop_toTopOf="@+id/iv_msg_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_msg_icon"/>

    <TextView
            android:id="@+id/tv_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/color_A1A1A1"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11.5dp"
            android:layout_marginEnd="11dp"/>

    <TextView
            android:id="@+id/tv_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:gravity="center"
            android:minHeight="13.5dp"
            android:textColor="@color/color_232323"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/iv_msg_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_msg_icon"
            android:layout_marginTop="8.5dp"/>

    <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:minHeight="30.5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_282828"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tv_msg_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_msg_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="6.5dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>