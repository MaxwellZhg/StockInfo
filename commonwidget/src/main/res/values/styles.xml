<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:backgroundDimAmount">0.6</item>

    </style>

    <style name="oaDataTipsToptxt">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="unableBackgroundColor">#8db9e4</item>
        <item name="normalBackgroundColor">@color/color_1A6ED2</item>
        <item name="pressedBackgroundColor">#145bb3</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnStrokeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="unableStrokeColor">#666666</item>
        <item name="normalStrokeColor">#333333</item>
        <item name="pressedStrokeColor">#000000</item>
        <item name="normalStrokeWidth">1dp</item>
        <item name="pressedStrokeWidth">1dp</item>
        <item name="unableStrokeWidth">1dp</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnStrokeStyle.Bule" parent="btnStrokeStyle">
        <item name="unableStrokeColor">#8db9e4</item>
        <item name="normalStrokeColor">@color/color_1A6ED2</item>
        <item name="pressedStrokeColor">#145bb3</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@color/color_1A6ED2</item>
    </style>

    <style name="SimulationTradingTitleBar">
        <item name="zr_right_icon">@mipmap/ic_message</item>
        <item name="zr_right_icon_width">19dp</item>
        <item name="zr_right_icon_hight">20dp</item>
        <item name="zr_right_icon_margin">13dp</item>
        <item name="right2_icon">@mipmap/ic_serach</item>
        <item name="right2_icon_width">20dp</item>
        <item name="right2_icon_height">19dp</item>
        <item name="right2_icon_margin">51dp</item>
    </style>
</resources>